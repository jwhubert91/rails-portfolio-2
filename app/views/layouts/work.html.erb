<!DOCTYPE html>
<html>
  <head>
    <title><%= @page_title %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="keywords" content="<%=@seo_keywords%>" />

    <%= stylesheet_link_tag    'works', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <%= render 'shared/work_nav' %>

    <main role="main">

      <%= render 'shared/work_jumbotron' %>

      <%= yield %>

      <!-- start of footer -->
      <%= render 'shared/work_footer' %>
      <!-- end of footer -->

      <%= session_tracker_helper %>

    </main>

  </body>
</html>

</main>
