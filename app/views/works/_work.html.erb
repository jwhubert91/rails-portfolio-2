<div class="col-md-4">
  <div class="card mb-4 shadow-sm">
    <%= image_tag work.thumb_img unless work.thumb_img.nil? %>
    <div class="card-body">
      <p class="card-text">
      	<span><%= link_to work.title, work_show_path(work.id) %></span><br>
      	<%= work.subtitle %>
      </p>
      <div class="d-flex justify-content-between align-items-center">
        <% if logged_in?(:site_admin) %>
          <div class="btn-group">
            <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to "Edit", edit_work_path(work.id) if logged_in?(:site_admin) %></button>
            <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to "Delete", work, method: :delete, data: { confirm: 'Are you sure?' } if logged_in?(:site_admin) %></button>
          </div>
        <% end %>
        <small class="text-muted"><%= distance_of_time_in_words( work.created_at, Time.now) + " ago" %></small>
      </div>
    </div>
  </div>
</div>	