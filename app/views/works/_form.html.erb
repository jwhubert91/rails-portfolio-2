<%= form_with(model: @portfolio_item, local: true) do |form| %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :subtitle %>
    <%= form.text_area :subtitle %>
  </div>

  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body %>
  </div>

  <div>
    <ul>
      <%= form.fields_for :technologies do |technology_field| %>
      <li>
        <%= technology_field.label :name %>
        <%= technology_field.text_field :name %>
      </li>
      <%end%>
    </ul>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>

<% end %>