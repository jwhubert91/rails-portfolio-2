<%= form_with(model: @portfolio_item, local: true) do |form| %>
  <section class='row'>
    <div class='col-md-6'>
      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :subtitle %>
        <%= form.text_area :subtitle, class: 'form-control' %>
      </div>
    </div>

    <div class='col-md-6'>
      <div class="form-group">
        <%= form.label :body %>
        <%= form.text_area :body, class: 'form-control', rows: 13 %>
      </div>
    </div>

    <div class='col-md-12'>
      <h3>Technologies used:</h3>
      <div>
          <%= form.fields_for :technologies do |technology_field| %>
          <div class: 'form-group'>
            <%= technology_field.label :name %>
            <%= technology_field.text_field :name, class: 'form-control' %>
          </div>
          <%end%>
      </div><br>

      <div class="form-group">
        <%= form.submit 'Save Portfolio Item', class: 'btn btn-primary btn-block' %>
      </div>
    </div>
  </section>
<% end %>