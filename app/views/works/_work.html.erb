<div class="col-md-4">
  <div class="card mb-4 shadow-sm">
    <%= image_tag work.thumb_img unless work.thumb_img.nil? %>
    <div class="card-body">
      <p class="card-text">
      	<span><%= link_to work.title, work_show_path(work.id) %></span>
      	<%= work.subtitle %>
      </p>
      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
          <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to "Edit", edit_work_path(work.id) if logged_in?(:site_admin) %></button>
          <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to "Delete", work, method: :delete, data: { confirm: 'Are you sure?' } if logged_in?(:site_admin) %></button>
        </div>
        <small class="text-muted">9 mins</small>
      </div>
    </div>
  </div>
</div>	