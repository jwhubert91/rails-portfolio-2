<main class="container">

	<div class="row">

		<div class="column-md-7">
			<%= image_tag @portfolio_item.main_img %>
		</div>
		
		<div class="column-md-5">
			<h1><%= @portfolio_item.title %></h1>
			<hr>
			<em><%= @portfolio_item.subtitle %></em><br>
			<p><%= @portfolio_item.body %></p>
			<hr>
			<h3>Technologies used:</h3>
			<% @portfolio_item.technologies.each do |t| %>
				<p><%= t.name %></p>
			<% end %>
			<% if logged_in?(:site_admin) %>
		    <div class="btn-group">
		      <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to "Edit", edit_work_path(@portfolio_item.id) if logged_in?(:site_admin) %></button>
		      <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to "Delete", @portfolio_item, method: :delete, data: { confirm: 'Are you sure?' } if logged_in?(:site_admin) %></button>
		    </div>
		  <% end %>
		</div>

	</div>

</main>